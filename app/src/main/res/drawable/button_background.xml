<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D415F4" /> <!-- Background color when button is pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust the radius as desired -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00BCD4" /> <!-- Default background color when button is not pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners, adjust the radius as desired -->
        </shape>
    </item>
</selector>
